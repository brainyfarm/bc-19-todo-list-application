<% if (projectList) { %>
   <p><%= projectList.length %> project(s) available</p>
<% } %>

<div class="row teal white-text">
  <div class="col s12">
    <table>
        <thead>
          <tr>
              <th data-field="id">Name</th>
              <th data-field="name">Description</th>
              <th data-field="price">Date Started</th>
              <th data-field="price">Status</th>
              <th data-field="price">Actions</th>
          </tr>
        </thead>
        <tbody>
        <% projectList.forEach(function ([url, project]) { %>
          <tr>
            <td><%= project.name %></td>
            <td><%= project.description %></td>
            <td><%= new Date(project.start_time).toLocaleString() %></td>
            <td><%= project.active %></td>
            <td>
                <a href="<%= url %>"><i class="material-icons">mode_edit</i></a>
                <a href="<%= url %>/delete"><i class="material-icons">delete_forever</i>
                <a href="<%= url %>/report"><i class="material-icons">show_chart</i>
            </td>
          </tr>
        <% }); %>
        </tbody>
      </table>
  </div>
</div>